<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollProductDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:background="@color/colorWindowBackground"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/layout_margin">

            <!--Image Slide-->
            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pagerImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tvImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/layout_margin_half"
                    android:background="@drawable/btn_float_bg"
                    android:drawableLeft="@drawable/ic_vector_image"
                    android:drawablePadding="@dimen/layout_margin_half"
                    android:paddingLeft="@dimen/title_margin"
                    android:paddingTop="@dimen/layout_margin_quarter"
                    android:paddingRight="@dimen/title_margin"
                    android:paddingBottom="@dimen/layout_margin_quarter"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_secondary" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/title_margin">

                <TextView
                    android:id="@+id/idProperty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outline_btn"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="Mã tin: 0112055158922"
                    android:textColor="#486BF6"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#2F2F2F" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_margin_quarter"
                        android:text=" triệu / tháng"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="#2F2F2F" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/title_margin_half"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/layout_margin_half">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/layout_margin_quarter"
                        android:text="@string/text_area"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_primary" />

                    <LinearLayout
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:background="@drawable/outline_detail"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/layout_margin_half"
                        android:paddingBottom="@dimen/layout_margin_half">

                        <TextView
                            android:id="@+id/tvArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="#7F80EB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/title_margin_half"
                            android:text="@string/unit_square"
                            android:textColor="#7F80EB"
                            android:textSize="@dimen/text_size_primary" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/layout_margin_quarter"
                        android:text="@string/text_floor"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_primary" />

                    <LinearLayout
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:background="@drawable/outline_detail"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/layout_margin_half"
                        android:paddingBottom="@dimen/layout_margin_half">

                        <TextView
                            android:id="@+id/tvFloor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="#7F80EB" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/layout_margin_quarter"
                        android:text="@string/text_service_fee"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_primary" />

                    <LinearLayout
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:background="@drawable/outline_detail"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/layout_margin_half"
                        android:paddingBottom="@dimen/layout_margin_half">

                        <TextView
                            android:id="@+id/tvServiceFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="#7F80EB" />

                        <TextView
                            android:id="@+id/tvServiceFeeUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/title_margin_half"
                            android:text="@string/unit_price_month"
                            android:textColor="#7F80EB"
                            android:textSize="@dimen/text_size_primary" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--Map & Address-->
            <LinearLayout
                android:id="@+id/mapLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/mapProductLocation"
                    android:name="com.gomicorp.ui.WorkaroundMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="map_product" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorOverlay"
                    android:gravity="center"
                    android:paddingLeft="@dimen/title_margin"
                    android:paddingTop="@dimen/title_margin_half"
                    android:paddingRight="@dimen/title_margin"
                    android:paddingBottom="@dimen/title_margin_half"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal" />
            <!--Info Details-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_margin"
                android:paddingTop="@dimen/layout_margin"
                android:paddingRight="@dimen/title_margin"
                android:paddingBottom="@dimen/title_margin"
                android:text="@string/text_details_info"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_size_primary"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="@dimen/title_margin"
                android:paddingBottom="@dimen/title_margin">
                <!--Property-->
                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginRight="@dimen/title_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_margin_half"
                        android:layout_weight="1"
                        android:text="@string/text_property"
                        android:textColor="@color/colorTitleText"
                        android:textSize="@dimen/text_size_primary" />

                    <TextView
                        android:id="@+id/tvPropertyInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nha Nguyen Can"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_primary" />
                </TableRow>

                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginTop="@dimen/title_margin"
                    android:layout_marginBottom="@dimen/title_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />
                </TableRow>
                <!--Deposit & Price-->
                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginRight="@dimen/title_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_margin_half"
                        android:layout_weight="1"
                        android:text="@string/text_deposit_price"
                        android:textColor="@color/colorTitleText"
                        android:textSize="@dimen/text_size_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDepositInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_size_primary" />

                        <TextView
                            android:id="@+id/tvDepositUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin_quarter"
                            android:text="@string/unit_price"
                            android:textColor="@color/colorPrimaryText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/layout_margin_quarter"
                            android:paddingRight="@dimen/layout_margin_quarter"
                            android:text="/"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_size_primary" />

                        <TextView
                            android:id="@+id/tvPriceInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_size_primary" />

                        <TextView
                            android:id="@+id/tvPriceUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin_quarter"
                            android:text="@string/unit_price"
                            android:textColor="@color/colorPrimaryText" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginTop="@dimen/title_margin"
                    android:layout_marginBottom="@dimen/title_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />
                </TableRow>
                <!--Floor & Floor Count-->
                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginRight="@dimen/title_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_margin_half"
                        android:layout_weight="1"
                        android:text="@string/text_floor_fc"
                        android:textColor="@color/colorTitleText"
                        android:textSize="@dimen/text_size_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvFloorInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_size_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/layout_margin_quarter"
                            android:paddingRight="@dimen/layout_margin_quarter"
                            android:text="/"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_size_primary" />

                        <TextView
                            android:id="@+id/tvFloorCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_size_primary" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginTop="@dimen/title_margin"
                    android:layout_marginBottom="@dimen/title_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />
                </TableRow>
                <!--GF Area-->
                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginRight="@dimen/title_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_margin_half"
                        android:layout_weight="1"
                        android:text="@string/text_gross_floor_area"
                        android:textColor="@color/colorTitleText"
                        android:textSize="@dimen/text_size_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvGFArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_size_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin_quarter"
                            android:text="@string/unit_square"
                            android:textColor="@color/colorPrimaryText" />

                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginTop="@dimen/title_margin"
                    android:layout_marginBottom="@dimen/title_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />
                </TableRow>
                <!--Bed & Bath-->
                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginRight="@dimen/title_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_margin_half"
                        android:layout_weight="1"
                        android:text="@string/text_bed_bath"
                        android:textColor="@color/colorTitleText"
                        android:textSize="@dimen/text_size_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvBedroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_size_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/layout_margin_quarter"
                            android:paddingRight="@dimen/layout_margin_quarter"
                            android:text="/"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_size_primary" />

                        <TextView
                            android:id="@+id/tvBathroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_size_primary" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginTop="@dimen/title_margin"
                    android:layout_marginBottom="@dimen/title_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />
                </TableRow>
                <!--House Direction-->
                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginRight="@dimen/title_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_margin_half"
                        android:layout_weight="1"
                        android:text="@string/text_house_direction"
                        android:textColor="@color/colorTitleText"
                        android:textSize="@dimen/text_size_primary" />

                    <TextView
                        android:id="@+id/tvDirection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_primary" />
                </TableRow>

                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginTop="@dimen/title_margin"
                    android:layout_marginBottom="@dimen/title_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />
                </TableRow>
                <!--Elevator-->
                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginRight="@dimen/title_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_margin_half"
                        android:layout_weight="1"
                        android:text="@string/text_elevator"
                        android:textColor="@color/colorTitleText"
                        android:textSize="@dimen/text_size_primary" />

                    <TextView
                        android:id="@+id/tvElevator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_primary" />
                </TableRow>

                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginTop="@dimen/title_margin"
                    android:layout_marginBottom="@dimen/title_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />
                </TableRow>
                <!--Vật Nuôi-->
                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginRight="@dimen/title_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_margin_half"
                        android:layout_weight="1"
                        android:text="@string/text_pest"
                        android:textColor="@color/colorTitleText"
                        android:textSize="@dimen/text_size_primary" />

                    <TextView
                        android:id="@+id/tvPet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_primary" />
                </TableRow>

                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginTop="@dimen/title_margin"
                    android:layout_marginBottom="@dimen/title_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />
                </TableRow>
                <!--Num Person-->
                <TableRow
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginRight="@dimen/title_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_margin_half"
                        android:layout_weight="1"
                        android:text="@string/text_number_person"
                        android:textColor="@color/colorTitleText"
                        android:textSize="@dimen/text_size_primary" />

                    <TextView
                        android:id="@+id/tvNumPerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_primary" />
                </TableRow>
            </TableLayout>

            <include layout="@layout/layout_divider_horizontal" />

            <!--Feature-->
            <LinearLayout
                android:id="@+id/featureLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/title_margin"
                    android:text="@string/text_feature"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_size_primary"
                    android:textStyle="bold" />

                <include layout="@layout/layout_divider_horizontal" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFeature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="@dimen/title_margin" />

                <include layout="@layout/layout_divider_horizontal" />
            </LinearLayout>

            <!--Furniture-->
            <LinearLayout
                android:id="@+id/furnitureLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/title_margin"
                    android:text="@string/text_furniture"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_size_primary"
                    android:textStyle="bold" />

                <include layout="@layout/layout_divider_horizontal" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFurniture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="@dimen/title_margin" />


                <include layout="@layout/layout_divider_horizontal" />
            </LinearLayout>

            <!--Info Details-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_margin"
                android:paddingTop="@dimen/layout_margin"
                android:paddingRight="@dimen/title_margin"
                android:paddingBottom="@dimen/title_margin"
                android:text="@string/text_content_product"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_size_primary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="@dimen/title_margin">

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_primary" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bar_gradient_background"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@android:color/white">

        <include layout="@layout/layout_divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/title_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_margin_half"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvContactName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_secondary" />

                <TextView
                    android:id="@+id/tvContactPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_primary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnContact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_primary_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_call"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_primary" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <include
        layout="@layout/layout_progress"
        tools:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
